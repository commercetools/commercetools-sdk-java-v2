{
  "extends": [
    "config:base",
    ":enableVulnerabilityAlerts",
    "schedule:weekly"
  ],
  "separateMajorMinor": true,
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all dependencies",
      "groupSlug": "all"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": [
    "Type: Maintenance"
  ],
  "ignoreDeps": ["com.github.jk1.dependency-license-report"]
}
